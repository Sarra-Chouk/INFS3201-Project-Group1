<style>
    .signup-container {
        margin: auto;
        background-color: #ffffff; /* Default white background */
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

    .dropdown-item {
        display: flex; /* Using flexbox for alignment */
        align-items: center; /* Aligns checkbox and label vertically */
    }

    .dropdown-item input[type="checkbox"] {
        margin-right: 10px; /* Adds spacing between the checkbox and the label */
    }
</style>

<div class="signup-container">
    <h2>Sign Up</h2>
    {{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{/if}}
    <form action="/signup" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password">
        </div>
        <div class="mb-3">
            <label for="languages_speak" class="form-label">Languages you speak fluently</label>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="languagesDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Select Languages
                </button>
                <ul class="dropdown-menu" aria-labelledby="languagesDropdown">
                    <li class="dropdown-item">
                        <input type="checkbox" id="english" name="languages" value="English">
                        <label for="english">English</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="spanish" name="languages" value="Spanish">
                        <label for="spanish">Spanish</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="french" name="languages" value="French">
                        <label for="french">French</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="german" name="languages" value="German">
                        <label for="german">German</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="chinese" name="languages" value="Chinese">
                        <label for="chinese">Chinese</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="arabic" name="languages" value="Arabic">
                        <label for="arabic">Arabic</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="japanese" name="languages" value="Japanese">
                        <label for="japanese">Japanese</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="russian" name="languages" value="Russian">
                        <label for="russian">Russian</label>
                    </li>
                </ul>
            </div>
        </div>
        <div class="mb-3">
            <label for="languages_learn" class="form-label">Languages you would like to learn</label>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="languagesDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Select Languages
                </button>
                <ul class="dropdown-menu" aria-labelledby="languagesDropdown">
                    <li class="dropdown-item">
                        <input type="checkbox" id="english" name="languages" value="English">
                        <label for="english">English</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="spanish" name="languages" value="Spanish">
                        <label for="spanish">Spanish</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="french" name="languages" value="French">
                        <label for="french">French</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="german" name="languages" value="German">
                        <label for="german">German</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="chinese" name="languages" value="Chinese">
                        <label for="chinese">Chinese</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="arabic" name="languages" value="Arabic">
                        <label for="arabic">Arabic</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="japanese" name="languages" value="Japanese">
                        <label for="japanese">Japanese</label>
                    </li>
                    <li class="dropdown-item">
                        <input type="checkbox" id="russian" name="languages" value="Russian">
                        <label for="russian">Russian</label>
                    </li>
                </ul>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
    <p class="mt-3">
        Already have an account? <a href="/login">Log in</a>
    </p>
</div>