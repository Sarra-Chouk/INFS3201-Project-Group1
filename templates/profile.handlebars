<style>
    body {
        display: flex;
        margin: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
    }

    .sidebar-nav {
        width: 250px;
        background-color: #f8f9fa;
        padding-top: 20px;
        height: 100vh;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        position: fixed;
        left: 0;
        top: 0;
    }

    .sidebar-nav .nav-item {
        margin-bottom: 10px;
    }

    .sidebar-nav .nav-item .nav-link {
        display: block;
        padding: 10px 20px;
        text-decoration: none;
        color: #495057;
        border-radius: 5px;
    }

    .sidebar-nav .nav-item .nav-link:hover,
    .sidebar-nav .nav-item .active {
        background-color: #545cf9;
        color: white;
    }

    .main-content {
        margin-left: 250px;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .profile-container {
        width: 400px;
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        margin-bottom: 20px;
        border: 3px solid #545cf9;
    }

    .profile-username {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .profile-email {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    .badges-title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .badges-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
    }

    .badge {
        width: 60px;
        height: 60px;
        background-color: #eaeaea;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        text-align: center;
    }

    .footer {
        text-align: center;
        margin-top: 20px;
        color: #aaa;
    }
</style>

<body>
    
    <ul class="sidebar-nav">
        <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
        <li class="nav-item"><a class="nav-link active" href="/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
        <li class="nav-item"><a class="nav-link" href="/my-contacts"><i class="bi bi-people me-2"></i>My Contacts</a></li>
        <li class="nav-item"><a class="nav-link" href="/blocked-contacts"><i class="bi bi-person-x me-2"></i>Blocked Contacts</a></li>
        <li class="nav-item"><a class="nav-link" href="/badges"><i class="bi bi-patch-check me-2"></i>Badges</a></li>
    </ul>

    <div class="main-content">
        <div class="profile-container">
            <img src="{{profilePicture}}" alt="Profile Picture" class="profile-picture">
            <div class="profile-username">{{username}}</div>
            <div class="profile-email">Email: {{email}}</div>

            <div class="badges-title">Your Badges</div>
            <div class="badges-container">
                {{#if badges}}
                    {{#each badges}}
                        <div class="badge">{{this.name}}</div>
                    {{/each}}
                {{else}}
                    <div>You have not earned any badges yet.</div>
                {{/if}}
            </div>
        </div>
    </div>
</body>
